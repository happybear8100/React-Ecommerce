---
import Layout from "../layouts/Layout.astro";
import data from "../../public/data.json";
import "../../assets/scss/astro-ecommerce.scss";
import Navbar from "../components/navbar";
import PageHeader from "../components/header";
import ProductOverviews from "../components/products/productOverviews";
import CardProduct from "../components/products/cardProduct";
import CardCategory from "../components/products/cardCategory";
import StoreNavbar from "../components/store/storeNavbar";
import StoreNavigation from "../components/store/storeNavigation";
import StoreNavigationBreadcrumb from "../components/store/storeNavigationBreadcrumb";
import StoreNavigationGridDark from "../components/store/storeNavigationGridDark";
import StoreNavigationGrid from "../components/store/storeNavigationGrid";
import StoreNavigationColumns from "../components/store/storeNavigationColumns";
import StoreNavigationColumnsDark from "../components/store/storeNavigationColumnsDark";
---

<Layout title="Landing Page">
  <main>
    <Navbar />
    <div class="container my-5">
      <ProductOverviews colors={data.products[1].colors} />

      <div class="d-flex justify-content-between">
        <h5 class="mb-4">Product List Scrollable</h5>
        <a href="#">See all &#8594</a>
      </div>
      <div class="d-flex overflow-scroll">
        {
          data.products.map((product) => (
            <div class="col-md-6 col-lg-3 me-4">
              <CardProduct
                thumb_src={product.thumb_src}
                thumb_alt={product.thumb_alt}
                color={product.color}
                colors={product.colors}
                title={product.title}
                description={product.description}
                price={product.price}
                position="center"
              />
            </div>
          ))
        }
      </div>

      <div class="d-flex overflow-scroll mb-5">
        {
          data.categories.map((category) => (
            <div class="col-md-6 col-lg-3 me-4">
              <CardCategory
                thumb_src={category.thumb_src}
                title={category.title}
              />
            </div>
          ))
        }
      </div>

      <div class="my-10">
        <nav
          class="navbar navbar-expand-md shadow-none flex-wrap top-0 px-0 py-0"
        >
          <StoreNavigationBreadcrumb />
        </nav>
        <p>Components and blocks for Navigation.</p>
      </div>
    </div>
    <div class="mt-5">
      <StoreNavigationGridDark />

      <PageHeader 
        bgImage={data.header[0].bgImage}
        title={data.header[0].title}
        description={data.header[0].description}
        filterColor={data.header[0].filterColor}
        titleColor={data.header[0].titleColor}
        descriptionColor={data.header[0].descriptionColor}
      />
    </div>
    <div class="mt-5">
      <StoreNavigationColumnsDark />

      <PageHeader 
        bgImage={data.header[0].bgImage}
        title={data.header[0].title}
        description={data.header[0].description}
        filterColor={data.header[0].filterColor}
        titleColor={data.header[0].titleColor}
        descriptionColor={data.header[0].descriptionColor}
      />
    </div>

    <div class="position-relative pt-2 my-5">
      <div class="container position-sticky z-index-sticky">
        <StoreNavigationGrid />
      </div>

      <PageHeader 
        bgImage={data.header[0].bgImage}
        title={data.header[0].title}
        description={data.header[0].description}
        filterColor={data.header[0].filterColor}
        titleColor={data.header[0].titleColor}
        descriptionColor={data.header[0].descriptionColor}
      />
    </div>

    <div class="position-relative pt-2 my-5">
      <div class="container position-sticky z-index-sticky">
        <StoreNavigationColumns />
      </div>

      <PageHeader 
        bgImage={data.header[0].bgImage}
        title={data.header[0].title}
        description={data.header[0].description}
        filterColor={data.header[0].filterColor}
        titleColor={data.header[0].titleColor}
        descriptionColor={data.header[0].descriptionColor}
      />
    </div>
    
    <div class="position-relative pt-2 my-5">
      <div class="container position-sticky z-index-sticky">
        <StoreNavigationColumns />
      </div>
      <PageHeader 
        bgImage={data.header[1].bgImage}
        title={data.header[1].title}
        description={data.header[1].description}
        filterColor={data.header[1].filterColor}
        titleColor={data.header[1].titleColor}
        descriptionColor={data.header[1].descriptionColor}
      />
    </div>
  </main>
</Layout>
